<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for a category of music -->
    <style name="CategoryStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Style for image1 -->
    <style name="Image1style">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="playertext1">
        <item name ="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toRightOf">@id/image</item>
        <item name="android:paddingLeft">@dimen/playertextpading</item>
        <item name="android:paddingTop">@dimen/playertextpading</item>
        <item name="android:textSize">@dimen/playertext1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="playertext2">
        <item name ="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/player_music</item>
        <item name="android:layout_toRightOf">@id/image</item>
        <item name="android:paddingLeft">@dimen/playertextpading</item>
        <item name="android:paddingTop">@dimen/playertextpading</item>
        <item name="android:textSize">@dimen/playertext1</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
